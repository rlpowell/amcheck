{
  imapserver: "localhost",
  login: "weeble",
  // Note that "pass" is the literal password that dovecot expects in testing
  // mode; it doesn't care about the login name
  password: "pass",
  matcher_sets: [
    {
      name: "Puppet Runs OK",
      matchers: [
        { Match: { From: " <root@" } },
        { Match: { Subject: "^Cron " } },
        { Match: { Subject: "puppet agent" } },
      ],
      checker_tree: {
        BodyCheck: {
          string: "Notice: Applied catalog in",
          matched: {
            DateCheck: {
              days: 1,
              older_than: {
                Action: "Delete"
              },
              younger_than: {
                Action: "Alert"
              },
            },
          },
          not_matched: {
            Action: "Alert"
          },
        },
      },
    }
  ]
}
